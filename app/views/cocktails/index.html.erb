<h1>Cocktails</h1>
<div class="container-cocktails">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
      <% if cocktail.image.attached? %>
        <div class="card" style="backround-image: url(<%= cl_image_tag cocktail.image.key, width: 300, height: 200, crop: :fill %>); ">
      <% else %>
        <div class="card">
      <% end %>
          <h3><%= cocktail.name %></h3>
        </div>
    <% end %>
      
  <% end %>
</div>
